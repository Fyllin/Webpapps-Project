block content
    h2(id = "title")
    h5(id = "user")
    div(id = "code")
    h2 Comments
    p Post a comment:
    div(class="row")
    form(action="" id="comment-form" method="POST" class="col s12")
        div(class="row")
            div(class="input-field col s12")
                label(for="text") Comment
                textarea(class="materialize-textarea" name="text" form='comment-form' id="text" required)
        button(class="waves-effect waves-light btn" type="submit") Submit


    div(id = "comments" postid = pid class="container")
    script(src="/javascripts/post.js" postid = pid)